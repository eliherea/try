{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "crud-data",
            "host": {
                "sourcePath": "/var/app/current"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "repo-worker",
            "image": "016433531930.dkr.ecr.us-east-1.amazonaws.com/repo-worker:app-latest",
            "cpu": 1024,
            "memory": 2048,
            "essential": true,
            "prvileged": true,
            "mountPoints": [
                {
                    "sourceVolume": "crud-data",
                    "containerPath": "/var/app/current"
                }
            ],
            "portMappings": [
                {
                    "appProtocol": "http",
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ]
        }
    ]
}