{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "crud-data"
        }
    ],
    "containerDefinitions": [
        {
            "name": "repo-worker",
            "image": "016433531930.dkr.ecr.us-east-1.amazonaws.com/repo-worker:app-latest",
            "cpu": 1024,
            "memory": 2048,
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "crud-data",
                    "containerPath": "/var/app/current/nodejsbasic"
                }
            ],
            "portMappings": [
                {
                    "appProtocol": "http",
                    "containerPort": 8000,
                    "hostPort": 8000
                }
            ],
            "environment": [
                {
                    "name": "DB_HOST",
                    "value": "database-1.c7iehwkxea9z.us-east-1.rds.amazonaws.com"
                },
                {
                    "name": "DB_USER",
                    "value": "admin"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "ambatukam"
                },
                {
                    "name": "DB_DATABASE",
                    "value": "crud_db"
                },
                {
                    "name": "PORT",
                    "value": "8000"
                }
            ]
        }
    ]
}